+        if (mkdir (path, 0755) < 0) {
+                g_warning ("Failed to create directory %s", path);
+        }
+        else {
+                char *marker;
+
+                gtk_list_store_insert_with_values (store, &iter, 100, 0, name, -1);
+
+                marker = g_build_filename (path, ".new-session", NULL);
+                creat (marker, 0600);
+                g_free (marker);
+        }
+
+        g_free (path);
+}
