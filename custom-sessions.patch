+{
+        char *name;
+        char *path;
+        int i;
+
+        for (i = 1; i < 20; i++) {
+                name = g_strdup_printf (_("Session %d"), i);
+                path = get_session_path (name);
+                if (!g_file_test (path, G_FILE_TEST_EXISTS)) {
+                        g_free (path);
+                        return name;
+                }
+                g_free (path);
+                g_free (name);
+        }
+
+        return NULL;
